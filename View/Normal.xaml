<UserControl x:Class="Csharp_final_assignment_Face_Recognition_Attendance_System.View.Normal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:Csharp_final_assignment_Face_Recognition_Attendance_System.ViewModel"
             d:DataContext="{d:DesignInstance Type=vm:UserDashboardViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d"
             Background="White">

    <UserControl.Resources>
        <!-- 考勤记录模板 -->
        <DataTemplate x:Key="AttendanceTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <!-- 功能菜单 -->
                    <RowDefinition Height="*"/>
                    <!-- 表格 -->
                </Grid.RowDefinitions>

                <!-- 功能菜单 -->
                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10,5">
                    <TextBlock Text="按日期筛选：" VerticalAlignment="Center"/>
                    <DatePicker SelectedDate="{Binding AttendanceStartDate}" Margin="5,0"/>
                    <TextBlock Text="至" VerticalAlignment="Center"/>
                    <DatePicker SelectedDate="{Binding AttendanceEndDate}" Margin="5,0"/>
                    <Button Content="筛选" Command="{Binding FilterAttendanceCommand}" Margin="10,0"/>
                    <Button Content="导出为 Excel" Command="{Binding ExportExcelCommand}" Margin="10,0"/>
                </StackPanel>

                <!-- 考勤记录列表 -->
                <DataGrid Grid.Row="1"
                  ItemsSource="{Binding AttendanceRecords}"
                  AutoGenerateColumns="False"
                  Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="打卡时间" Binding="{Binding CheckTime, StringFormat=yyyy-MM-dd HH:mm}"/>
                        <DataGridTextColumn Header="类型" Binding="{Binding CheckType}"/>
                        <DataGridTextColumn Header="工号" Binding="{Binding User.EmployeeNumber}"/>
                        <DataGridTextColumn Header="姓名" Binding="{Binding User.Name}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </DataTemplate>

        <!-- 申请休假/出差模板 -->
        <DataTemplate x:Key="ApplicationTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <!-- 功能菜单 -->
                    <RowDefinition Height="*"/>
                    <!-- 表单 -->
                </Grid.RowDefinitions>

                <!-- 功能菜单 -->
                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10,5">
                    <TextBlock Text="申请类型：" VerticalAlignment="Center"/>
                    <ComboBox SelectedItem="{Binding SelectedRequestType}"
                    ItemsSource="{Binding RequestTypes}"
                    Width="120" Margin="5,0"/>
                    <Button Content="提交给管理员"
                  Command="{Binding SubmitRequestCommand}"
                  Margin="20,0"/>
                </StackPanel>

                <!-- 表单主内容 -->
                <StackPanel Grid.Row="1" Margin="10">
                    <Label Content="开始日期"/>
                    <DatePicker SelectedDate="{Binding LeaveStartDate}" />

                    <Label Content="结束日期" Margin="0,10,0,0"/>
                    <DatePicker SelectedDate="{Binding LeaveEndDate}" />

                    <Label Content="请假/出差理由" Margin="0,10,0,0"/>
                    <TextBox Text="{Binding LeaveReason}"
                   Height="100"
                   AcceptsReturn="True"
                   TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <!--用户标题-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="User Panel" FontSize="24" FontWeight="Bold" Padding="10" Background="#FF00A185"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧导航 -->
            <StackPanel Grid.Column="0" Background="#FF5ABDAC">
                <Button Content="考勤记录"
          Command="{Binding ShowAttendanceCommand}"
          Margin="0,20,0,10"/>
                <Button Content="申请休假/出差"
          Command="{Binding ShowApplicationCommand}"
          Margin="0,10,0,10"/>
            </StackPanel>

            <!-- 右侧内容区：根据 CurrentSection 切换模板 -->
            <ContentControl Grid.Column="1" Content="{Binding CurrentSection}">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <!-- 默认加载考勤模板 -->
                        <Setter Property="ContentTemplate" Value="{StaticResource AttendanceTemplate}"/>
                        <Style.Triggers>
                            <!-- 如果 CurrentSection == Application，则切换到申请模板 -->
                            <DataTrigger Binding="{Binding CurrentSection}" Value="Application">
                                <Setter Property="ContentTemplate" Value="{StaticResource ApplicationTemplate}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Grid>
    </Grid>
    
    
</UserControl>

