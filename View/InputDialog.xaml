<Window x:Class="Csharp_final_assignment_Face_Recognition_Attendance_System.View.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Csharp_final_assignment_Face_Recognition_Attendance_System.View"
        xmlns:vm="clr-namespace:Csharp_final_assignment_Face_Recognition_Attendance_System.ViewModel"
        mc:Ignorable="d"
        Title="填写信息" Width="300" Height="600" ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="姓名：" Margin="0,5"/>
            <TextBox Text="{Binding Name}" Margin="0,0,0,10"/>

            <TextBlock Text="密码：" Margin="0,5"/>
            <PasswordBox PasswordChar="{Binding Password}" Margin="0,0,0,10"/>

            <TextBlock Text="确认密码：" Margin="0,5"/>
            <PasswordBox PasswordChar="{Binding ConfirmPassword}" Margin="0,0,0,10"/>

            <TextBlock Text="工号：" Margin="0,5"/>
            <TextBox Text="{Binding EmployeeNumber}" Margin="0,0,0,10"/>

            <TextBlock Text="所属组：" Margin="0,5"/>
            <ComboBox ItemsSource="{Binding Groups}" SelectedItem="{Binding SelectedGroup}" DisplayMemberPath="GroupName" Margin="0,0,0,10"/>

            <TextBlock Text="年龄：" Margin="0,5"/>
            <TextBox Text="{Binding Age}" Margin="0,0,0,10"/>

            <TextBlock Text="是否为管理员：" Margin="0,5"/>
            <StackPanel Orientation="Horizontal">
                <RadioButton Content="是" IsChecked="{Binding IsAdmin}"/>
                <RadioButton Content="否"/>
            </StackPanel>
            <TextBlock Text="邮箱：" Margin="0,5"/>
            <TextBox Text="{Binding Email}" Margin="0,0,0,10"/>

            <TextBlock Text="电话：" Margin="0,5"/>
            <TextBox Text="{Binding PhoneNumber}" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
                <Button Content="确认" Width="60" Margin="0,0,10,0" Command="{Binding ConfirmCommand}"/>
                <Button Content="取消" Width="60" Command="{Binding CancelCommand}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
