<UserControl x:Class="Csharp_final_assignment_Face_Recognition_Attendance_System.View.Admin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:Csharp_final_assignment_Face_Recognition_Attendance_System.View"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:vm="clr-namespace:Csharp_final_assignment_Face_Recognition_Attendance_System.ViewModel"
             xmlns:tools="clr-namespace:Csharp_final_assignment_Face_Recognition_Attendance_System.Tools"
             xmlns:core="clr-namespace:Csharp_final_assignment_Face_Recognition_Attendance_System.Core"
             d:DataContext="{d:DesignInstance Type=vm:AdminViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:Background="White"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--管理员标题-->
        <TextBlock Text="Admin Panel" FontSize="24" FontWeight="Bold" Padding="10" Background="#FF00A185"/>
        <!--主界面-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!--左侧菜单栏-->
            <StackPanel DockPanel.Dock="Left" Orientation="Vertical" Background="#FF5ABDAC">
                <Button Content="用户列表" Width="100" Height="30" Margin="10,30,10,10"
                        Command="{Binding SwitchViewCommand}"
                        CommandParameter="UserList"/>
                <Button Content="考勤规则" Width="100" Height="30" Margin="10,10"
                        Command="{Binding SwitchViewCommand}"
                        CommandParameter="AttendanceRule"/>
                <Button Content="用户请求" Width="100" Height="30" Margin="10,10"
                        Command="{Binding SwitchViewCommand}"
                        CommandParameter="UsersRequests"/>
                <Button Content="报表" Width="100" Height="30" Margin="10,10"/>
            </StackPanel>
            <!--面板-->
            <ContentControl Grid.Column="1" Content="{Binding CurrentView}">
                <ContentControl.Resources>
                    <!-- 定义不同视图的模板 -->
                    <DataTemplate DataType="{x:Type vm:UserListViewModel}">
                        <views:UserList/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:AttendanceRuleViewModel}">
                        <views:AttendanceRule/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:UsersRequestsViewModel}">
                        <views:UsersRequests/>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </Grid>
        <!--搜索栏-->
        
    </Grid>
</UserControl>
